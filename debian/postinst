#!/bin/sh
# postinst script for statsd-c
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
	if ! getent group statsd > /dev/null 2>&1; then
	    addgroup --system statsd > /dev/null
	fi

	if ! getent passwd statsd > /dev/null 2>&1; then
	    adduser --system statsd --home /var/lib/statsd --no-create-home --disabled-login --shell /bin/false --ingroup statsd
	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
